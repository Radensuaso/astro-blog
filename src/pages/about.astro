---
import '../styles/global.css';
import { Identity } from '../models/identity/identity';
import Header from '../components/header/Header.svelte';
import Footer from '../components/footer/Footer.astro';

const pageTitle: string = 'My Astro Learning Blog';

const identity = new Identity({
  firstName: 'Andr√©',
  hobbies: ['Video Games', 'Coding', 'Reading'],
  country: 'Portugal',
  occupation: 'Software Engineer',
  skills: [
    'JavaScript',
    'TypeScript',
    'React',
    'Node.js',
    'MongoDB',
    'PostgreSQL',
    'Astro',
  ],
  happy: true,
  finished: false,
  goal: 3,
});

const skillColor = 'navy';
const fontWeight = 'bold';
const textCase = 'uppercase';
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <title>{pageTitle}</title>
    <style define:vars={{ skillColor, fontWeight, textCase }}>
      h1 {
        color: purple;
        font-size: 4rem;
      }
      .skill {
        color: var(--skillColor);
        font-weight: var(--fontWeight);
        text-transform: var(--textCase);
      }
    </style>
  </head>
  <body>
    <Header client:visible />

    <h1>My Astro Learning Blog</h1>
    <p>This is where I will post about my journey learning Astro.</p>

    <p>Here are a few facts about me:</p>
    <ul>
      <li>My name is {identity.firstName}.</li>
      <li>
        I live in {identity.country} and I work as a {identity.occupation}.
      </li>
      {
        identity.hobbies.length >= 2 && (
          <li>
            Two of my hobbies are: {identity.hobbies[0]} and{' '}
            {identity.hobbies[1]}
          </li>
        )
      }
    </ul>
    <p>My skills are:</p>
    <ul>
      {identity.skills.map((skill) => <li class='skill'>{skill}</li>)}
    </ul>

    {identity.happy && <p>I am happy to be learning Astro!</p>}

    {identity.finished && <p>I finished this tutorial!</p>}

    {
      identity.goal === 3 ? (
        <p>My goal is to finish in 3 days.</p>
      ) : (
        <p>My goal is not 3 days.</p>
      )
    }

    <ul>
      <li><a href='/posts/post-1'>Post 1</a></li>
      <li><a href='/posts/post-2'>Post 2</a></li>
      <li><a href='/posts/post-3'>Post 3</a></li>
    </ul>

    <Footer />
  </body>
</html>
